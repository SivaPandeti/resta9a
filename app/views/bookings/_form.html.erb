  </div>
  <div class="field">
    <%= f.label :room %><br />
    <%= f.collection_select(:room_id, Room.all, :id, :room_name ) %>
  </div>
  <div class="field">
    <%= f.label :booking_date %><br />
    <%= f.date_select :booking_date %>
  </div>
  <div class="field">
    <%= f.label :booking_length %><br />
    <%= f.number_field :booking_length %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
