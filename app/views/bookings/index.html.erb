<h1>Hotel Bookings</h1>
<%= link_to 'Add New Booking', new_booking_path %>
<br /><br />
<table class="table table-striped">
  <tr>
    <th>Customer</th>
    <th>Hotel</th>
    <th>Room</th>
    <th>Booking date</th>
    <th>Duration of Stay</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookings.each do |booking| %>
  <tr>
    <td><%= booking.customer.first_name %></td>
    <td><%= booking.hotel.hotel_name %></td>
    <td><%= booking.room.room_name %></td>
    <td><%= booking.booking_date %></td>
    <td><%= booking.booking_length %></td>
    <td><%= link_to 'Show', booking %></td>
    <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
    <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate %>


